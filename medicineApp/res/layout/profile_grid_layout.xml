<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<GridLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" android:layout_row="0" android:layout_column="0"
        android:src="@drawable/cookie" android:layout_rowSpan="12" android:paddingLeft="10dp"
        android:paddingRight="20dp" android:paddingTop="55dp"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:   "
        android:id="@+id/numOfProducts" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_row="0" android:layout_column="1" android:paddingTop="30dp"/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceMedium" android:text="Last name:    "
          android:id="@+id/textView3" android:layout_below="@+id/profile_nameEdit" android:layout_alignParentLeft="true"
          android:layout_row="1" android:layout_column="1"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/profile_nameEdit" android:layout_alignBottom="@+id/numOfProducts"
        android:layout_toRightOf="@+id/numOfProducts" android:layout_row="0" android:layout_column="2"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weight:  "
        android:id="@+id/textView5" android:layout_below="@+id/profile_surnameEdit" android:layout_alignParentLeft="true"
        android:layout_row="2" android:layout_column="1"/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:id="@+id/profile_surnameEdit"
          android:layout_alignBottom="@+id/textView3" android:layout_toRightOf="@+id/textView3"
          android:layout_row="1" android:layout_column="2"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_weightEdit"
        android:layout_above="@+id/textView7" android:layout_toRightOf="@+id/textView6" android:layout_row="2"
        android:layout_column="2"/>
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:text="Age:  "
          android:id="@+id/textView6" android:layout_toRightOf="@+id/textView3"
          android:layout_row="3" android:layout_column="1"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_ageEdit"
        android:layout_alignBottom="@+id/textView5" android:layout_alignRight="@+id/textView7"
        android:layout_row="3" android:layout_column="2"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calories-a-day:   "
        android:id="@+id/textView7" android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
        android:layout_row="4" android:layout_column="1" />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_caloriesEdit"
        android:layout_alignBottom="@+id/textView7" android:layout_toRightOf="@+id/textView7"
        android:layout_row="4" android:layout_column="2"/>
</GridLayout>
    </RelativeLayout>